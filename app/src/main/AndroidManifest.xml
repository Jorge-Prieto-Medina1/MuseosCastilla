<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jorgeprieto.museosjorgeprieto">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name="com.jorgeprieto.Ui.PantallaSplash"
                android:label="@string/app_name"
                android:theme="@style/Theme.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.jorgeprieto.Ui.LoginActivity"
                android:label="LoginActivity"
                android:theme="@style/Theme.splash">
        </activity>

        <activity android:name="com.jorgeprieto.Ui.RegisterActivity"
                  android:label="RegisterActivity"
                  android:theme="@style/Theme.splash">
        </activity>

        <activity android:name="com.jorgeprieto.Ui.MainActivity"
                  android:label="Login"
                  android:theme="@style/Theme.splash">
        </activity>
    </application>

</manifest>