<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jorgeprieto.museosjorgeprieto">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <activity
                android:name="com.jorgeprieto.NavigationDrawerMuseoActivity"
                android:label="@string/title_activity_navigation_drawer_museo"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.jorgeprieto.Ui.PantallaSplash"
                android:label="@string/app_name"
                android:theme="@style/Theme.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.jorgeprieto.Ui.LoginActivity"
                android:label="LoginActivity"
                android:theme="@style/Theme.splash">
        </activity>
        <activity
                android:name="com.jorgeprieto.Ui.RegisterActivity"
                android:label="RegisterActivity"
                android:theme="@style/Theme.splash">
        </activity>
        <activity
                android:name="com.jorgeprieto.Ui.MainActivity"
                android:label="Login"
                android:theme="@style/Theme.splash">
        </activity>
    </application>

</manifest>