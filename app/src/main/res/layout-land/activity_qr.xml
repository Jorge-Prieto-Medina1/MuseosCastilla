<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jorgeprieto.ui.MusseumList.QrActivity">

    <Button
            android:text="@string/goBack"
            style="@style/loginScreenButton"
            android:layout_width="147dp"
            android:layout_height="65dp" android:id="@+id/btnOutQr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="76dp"
            app:layout_constraintStart_toEndOf="@+id/imgQrCode" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp" android:id="@+id/imgQrCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/qrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/txtQr"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgQrCode"/>
</androidx.constraintlayout.widget.ConstraintLayout>