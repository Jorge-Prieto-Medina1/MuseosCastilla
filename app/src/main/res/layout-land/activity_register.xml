<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jorgeprieto.ui.RegisterActivity">
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor2"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor3"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintGuide_begin="2dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor4"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor5"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor6"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer7"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imgRg"

            app:layout_constraintBottom_toTopOf="@id/gHor2"
            app:layout_constraintEnd_toStartOf="@id/gVer4"
            app:layout_constraintStart_toEndOf="@id/gVer2"
            app:layout_constraintTop_toBottomOf="@id/gHor3"
            app:srcCompat="@drawable/usuario"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/invisible"
            app:layout_constraintBottom_toTopOf="@id/gHor2"
            app:layout_constraintEnd_toStartOf="@id/gVer4"
            app:layout_constraintStart_toEndOf="@id/gVer2"
            app:layout_constraintTop_toBottomOf="@id/gHor3"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterRg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/register"
            style="@style/loginScreenButton"
            app:layout_constraintBottom_toTopOf="@id/gHor6"
            app:layout_constraintEnd_toStartOf="@id/gVer6"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            app:layout_constraintTop_toBottomOf="@id/gHor5"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackRg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/back"
            style="@style/loginScreenButton"
            app:layout_constraintBottom_toTopOf="@id/gHor6"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer7"
            app:layout_constraintTop_toBottomOf="@id/gHor5"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            android:id="@+id/txtEmailRg"
            app:layout_constraintTop_toBottomOf="@+id/txtPushToImage"
            app:layout_constraintHorizontal_bias="0.0" android:hint="@string/email"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            android:layout_marginTop="10dp"
            android:id="@+id/txtPasswordRg"
            app:layout_constraintTop_toBottomOf="@+id/txtEmailRg" android:hint="@string/password"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            android:id="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/txtPasswordRg" android:hint="@string/name"/>
    <TextView
            android:text="@string/rgTextForImage"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtPushToImage"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            app:layout_constraintTop_toTopOf="@+id/gHor2" android:textSize="25dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
