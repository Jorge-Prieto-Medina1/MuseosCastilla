<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutLg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jorgeprieto.ui.LoginActivity">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor2"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor3"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintGuide_percent="0.0"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor4"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor5"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.72"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor6"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor7"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gHor8"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.94"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gVer7"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imagen"
            app:layout_constraintBottom_toTopOf="@id/gHor2"
            app:layout_constraintEnd_toStartOf="@id/gVer4"
            app:layout_constraintStart_toEndOf="@id/gVer2"
            app:layout_constraintTop_toBottomOf="@id/gHor3" app:srcCompat="@drawable/museoscuadrado"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/login"
            style="@style/loginScreenButton"
            app:layout_constraintBottom_toTopOf="@id/gHor6"
            app:layout_constraintEnd_toStartOf="@id/gVer6"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            app:layout_constraintTop_toBottomOf="@id/gHor5"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterLg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/register"
            style="@style/loginScreenButton"
            app:layout_constraintBottom_toTopOf="@id/gHor6"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer7"
            app:layout_constraintTop_toBottomOf="@id/gHor5"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogleLg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/loginGoogle"
            style="@style/loginScreenButtonGoogle"
            app:layout_constraintBottom_toTopOf="@id/gHor8"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            app:layout_constraintTop_toBottomOf="@id/gHor7"
            android:drawableStart="@drawable/googleg_standard_color_18" android:paddingLeft="16dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            android:layout_marginTop="10dp"
            android:id="@+id/txtEmail"
            app:layout_constraintTop_toTopOf="@+id/gHor2" android:hint="@string/email"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintEnd_toStartOf="@id/gVer5"
            app:layout_constraintStart_toEndOf="@id/gVer1"
            android:layout_marginTop="10dp"
            android:id="@+id/txtPassword"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" android:hint="@string/password"/>


</androidx.constraintlayout.widget.ConstraintLayout>


